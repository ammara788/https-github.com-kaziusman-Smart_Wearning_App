                />


            <!--logo-->
            <EditText
                android:id="@+id/shop_edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_white_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="User Name"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/text_color"
                android:textColorHint="#B6B5B5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B5B5" />
            <EditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_label_outline_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Shop Name"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/text_color"
                android:textColorHint="#B6B5B5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B5B5" />


            <EditText
                android:id="@+id/edt_shop_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_lock_white_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="........"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/text_color"
                android:textColorHint="#B6B5B5"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B5B5" />


            <EditText
                android:id="@+id/edt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Address"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/text_color"
                android:textColorHint="#B6B5B5"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B5B5" />
            <EditText
                android:id="@+id/edt_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_location_city_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="City"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/text_color"
                android:textColorHint="#B6B5B5"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B5B5" />


